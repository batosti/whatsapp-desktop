{
  "name": "whatsapp-desktop",
  "version": "1.0.0",
  "description": "Whatsapp Desktop",
  "main": "app/index.js",
  "author": {
    "name": "Andr√© Batosti",
    "email": "batosti@gmail.com",
    "url": "https://github.com/batosti/"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron ./app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.12.0"
  },
  "build": {
    "appId": "whatsapp.desktop",
    "files": [
      "app/**/**",
      "build/**/**",
      "node_modules/**/**",
      "package.json"
    ],
    "linux": {
      "category": "Chat;Network",
      "packageCategory": "net",
      "executableName": "whatsapp-desktop",
      "synopsis": "Whatsapp Desktop",
      "description": "Unofficial Whatsapp client for Linux using Electron and Whatsapp Web",
      "desktop": {
        "Name": "Whatsapp Desktop",
        "Comment": "Unofficial Whatsapp client",
        "StartupWMClass": "whatsapp-desktop"
      },
      "target": [
        "deb"
      ]
    }
  }
}
